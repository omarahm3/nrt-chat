<html>

<head>
  <title>Update Account</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
</head>

<body>

  <%- include('../common/navbar') %>

  <div class="jumbotron">
    <h1 class="display-4">Update account</h1>
    <hr class="my-4">

    <!-- Create account form start -->
    <form method="POST" action="/control/account/account-update">
      <input name="id" type="text" value="<%= account.id %>" hidden>

      <div class="form-group">
        <label for="name">Account Name</label>
        <input name="name" type="text" class="form-control" id="name" value="<%= account.name %>">
      </div>
      <div class="form-group">
        <label for="waNumber">Whatsapp Number</label>
        <input name="waNumber" type="text" class="form-control" id="waNumber" value="<%= account.waNumber %>">
      </div>
      <div class="form-group">
        <label for="agents">Agents</label>
        <select name="agents" multiple class="form-control" id="agents">
          <% agents.forEach(function(agent) { %>
            <% if (account.agents.indexOf(agent.id) !== -1) { %>
              <option value="<%= agent.id %>" selected><%= agent.name %></option>
            <% } else { %>
              <option value="<%= agent.id %>"><%= agent.name %></option>
            <% } %> 
          <% }); %>
        </select>
      </div>

      <div class="form-group">
        <a href="<%= account.id %>/chats" class="btn btn-success btn-lg">Chats</a>
      </div>
      <button type="submit" class="btn btn-primary btn-lg btn-block">Update Account</button>
    </form>
    <!-- Create account form end -->

  </div>
</body>

</html>